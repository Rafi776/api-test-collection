                {
                    "name": "6. Create New Post (DDT & Chaining)",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"{{newTitle}}\",\n    \"body\": \"{{newBody}}\",\n    \"userId\": {{newUserId}}\n}"
                        },
                        "url": "https://jsonplaceholder.typicode.com/posts"
                    },
                    "response": [],
                    "event": [{
                        "listen": "test",
                        "script": {
                            "exec": [
                                "// 1. Assertions (DDT)",
                                "pm.test(\"Status code is 201 Created\", function () {",
                                "    pm.response.to.have.status(201);",
                                "});",
                                "var sentTitle = pm.iterationData.get(\"newTitle\");",
                                "pm.test(\"Response title matches sent data\", function () {",
                                "    pm.expect(pm.response.json().title).to.eql(sentTitle);",
                                "});",
                                "// 2. Chaining",
                                "var postId = pm.response.json().id;",
                                "// Setting the postId as a Collection variable for subsequent requests to use",
                                "pm.collectionVariables.set(\"postID\", postId);",
                                "console.log('New Post ID created for chaining: ' + postId);"
                            ],
                            "type": "text/javascript"
                        }
                    }]
                }

            ],
            "event": [{
                "listen": "prerequest",
                "script": {
                    "exec": [
                        "// Initialize postID if not set, needed for the first two requests to pass",
                        "if (!pm.collectionVariables.get(\"postID\")) {",
                        "    pm.collectionVariables.set(\"postID\", 1);",
                        "}"
                    ],
